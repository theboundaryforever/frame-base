<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <declare-styleable name="RoundedImageView">
        <!-- 描边宽度-->
        <attr name="round_border_width" format="dimension" />
        <!-- 描边颜色-->
        <attr name="round_border_color" format="color" />
        <!--圆角大小-->
        <attr name="round_corner_radius" format="dimension" />
        <!--左上圆角大小-->
        <attr name="round_leftTop_corner_radius" format="dimension" />
        <!--右上圆角大小-->
        <attr name="round_rightTop_corner_radius" format="dimension" />
        <!--左下圆角大小-->
        <attr name="round_leftBottom_corner_radius" format="dimension" />
        <!--右下圆角大小-->
        <attr name="round_rightBottom_corner_radius" format="dimension" />
        <!--图片类型：圆角或者圆形-->
        <attr name="round_type" format="enum">
            <enum name="oval" value="2" />
            <enum name="round" value="1" />
            <enum name="circle" value="0" />
        </attr>
    </declare-styleable>

    <declare-styleable name="WenextTextView">
        <attr name="stroke_color" format="color" />
        <attr name="stroke_colors" format="string" />
        <attr name="stroke_position" format="string" />
        <attr name="stroke_width" format="dimension" />
        <attr name="gradient_orientation" format="enum">
            <enum name="vertical" value="0" />
            <enum name="horizontal" value="1" />
        </attr>
        <attr name="gradient_colors" format="string" />
        <attr name="gradient_position" format="string" />

        <attr name="shadow_dx" format="float" />
        <attr name="shadow_dy" format="float" />
        <attr name="shadow_radius" format="float" />
        <attr name="shadow_color" format="color" />
    </declare-styleable>

    <attr name="top_bar_title" format="string" />
    <attr name="back_drawable" format="reference" />
    <attr name="right_drawable" format="reference" />
    <attr name="button_radius" format="dimension" />
    <attr name="left_drawable" format="reference" />
    <attr name="text_size" format="dimension|reference" />
    <attr name="bar_background" format="reference|color" />
    <attr name="title_color" format="reference|color" />
    <declare-styleable name="CommonTopBar" tools:ignore="ResourceName">
        <attr name="top_bar_title" />
        <attr name="back_drawable" />
        <attr name="right_drawable" />
        <attr name="bar_background" />
        <attr name="title_color" />
    </declare-styleable>

    <declare-styleable name="RoundedProgressBar">
        <attr name="progressColor" format="color" />
        <attr name="backgroundColor" format="color" />
        <attr name="borderColor" format="color" />
        <attr name="borderWidth" format="dimension" />
        <attr name="cornerRadius" format="dimension" />
        <attr name="maxProgress" format="integer" />
        <attr name="currentProgress" format="integer" />
    </declare-styleable>
    <declare-styleable name="BadgeView">
        <attr name="badgeTextSize" format="dimension" />
        <attr name="badgeBackgroundColor" format="color" />
        <attr name="badgeMaxHeight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="FixDragLayout">
        <attr name="android:orientation" />
    </declare-styleable>
    <declare-styleable name="UserAvatarView">
        <attr name="avatarMargin" format="dimension" />
        <attr name="avatarPadding" format="dimension" />
        <attr name="avatarWidth" format="dimension" />
        <attr name="avatarHeight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="PasswordEditTextView">
        <attr name="passwordLength" format="integer" />
        <attr name="boxHeight" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="border_width" format="dimension" />
        <attr name="borderRadius" format="dimension" />
        <attr name="borderSpacing" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="passwordChar" format="string" />
        <attr name="isPasswordVisible" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CustomSeekBar">
        <attr name="thumbDrawable" format="reference" />
        <attr name="thumbWidth" format="dimension" />
        <attr name="thumbHeight" format="dimension" />
        <attr name="trackColor" format="color" />
        <attr name="progressbarColor" format="color" />
        <attr name="trackRadius" format="dimension" />
        <attr name="maxValue" format="integer" />f
        <attr name="trackHeight" format="dimension" />
        <attr name="isSeekable" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CountDownButton">
        <attr name="normalTextColor" format="color" />
        <attr name="countingTextColor" format="color" />
        <attr name="normalBackgroundColor" format="color" />
        <attr name="countingBackgroundColor" format="color" />
        <attr name="roundCornerRadius" format="dimension" />
        <attr name="normalBackgroundDrawable" format="reference" />
        <attr name="countingBackgroundDrawable" format="reference" />

    </declare-styleable>

    <declare-styleable name="RatioImageView">
        <attr name="ratio" format="float" />
        <attr name="direction" format="enum">
            <enum name="top" value="0" />
            <enum name="bottom" value="1" />
            <enum name="start" value="2" />
            <enum name="end" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="CountableEditText">
        <attr name="maxCount" format="integer" />
    </declare-styleable>

    <declare-styleable name="CustomInteractiveView">
        <attr name="customTitle" format="string" />
        <attr name="customIcon" format="boolean" />
    </declare-styleable>


        <declare-styleable name="SciFiBlockProgressBar">
            <!-- 进度条中显示的块（线条）的总数量，用于进度计算 (0-100%)。如果设置了 blockHeight，此属性不再用于计算高度。 -->
            <attr name="blockCount" format="integer" />
            <!-- 每个块之间的垂直间距的高度 (dimension) -->
            <attr name="blockSpacing" format="dimension" />
            <!-- 进度条块的固定高度 (dimension)。如果设置 (>0)，将使用此固定高度绘制块，否则根据 blockCount 自动计算。 -->
            <attr name="blockHeight" format="dimension" />
            <!-- 激活块的颜色 -->
            <attr name="activeColor" format="color" />
            <!-- 非激活块的颜色 -->
            <attr name="inactiveColor" format="color" />
            <!-- 辉光效果的颜色和文本颜色/辉光颜色 -->
            <attr name="glowColor" format="color" />
            <!-- 边框（外框）的颜色 -->
            <attr name="frameColor" format="color" />
        </declare-styleable>

        <declare-styleable name="CustomProgressBarView">
            <attr name="progressBarBackgroundColor" format="color" />
            <attr name="progressBarFillColor" format="color" />
            <attr name="progressBarBorderColor" format="color" />
            <attr name="progressBarBorderWidth" format="dimension" />
            <attr name="progressBarRadius" format="dimension" />
            <attr name="progressBarPadding" format="dimension" />
            <attr name="progressBarTextColor" format="color" />
            <attr name="progressBarTextSize" format="dimension" />
            <attr name="progressBarmaxProgress" format="integer" />
            <attr name="progressBarcurrentProgress" format="integer" />
        </declare-styleable>
</resources>